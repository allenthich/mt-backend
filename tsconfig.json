{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api", "api/*"],
      "@routes": ["routes.ts"],
      "@middleware": ["middleware"],
      "@middleware/*": ["middleware/*"],
      "@tasks/*": ["api/tasks/*"],
      "@users/*": ["api/users/*"],
      "@utils/*": ["utils/*"],
    },
    "typeRoots": ["./types/**/.*.ts","./node_modules/@types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
